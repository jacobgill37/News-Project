{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2020-07-09T20:11:00.000Z",
          "article_id": 1,
          "votes": 15,
          "comment_count": "11"
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "posts a new article to the database given in the request body",
    "queries": [],
    "exampleRequest": {
      "title": "Living in the shadow of a great man 2",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging"
    },
    "exampleResponse": {
      "title": "Living in the shadow of a great man 2",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging",
      "created_at": "2020-07-09T20:11:00.000Z",
      "article_id": 1,
      "votes": 0,
      "comment_count": "0"
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "username",
          "name": "firstName",
          "avatar_url": "<link_to_image>"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "serves a single user",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "username",
          "name": "firstName",
          "avatar_url": "<link_to_image>"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article with given id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 12,
        "article_id": 1,
        "comment_count": "11"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comment for the article ordered by date descending",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 12,
          "author": "weegembump",
          "body": "Text from the comment..",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 12,
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to the database given in the request body",
    "queries": [],
    "exampleRequest": {
      "username": "weegembump",
      "body": "Text from the comment.."
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 12,
          "author": "weegembump",
          "body": "Text from the comment..",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 12,
          "article_id": 1
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates a current articles vote count",
    "queries": [],
    "exampleRequest": { "inc_votes": 4 },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 12,
        "article_id": 1,
        "comment_count": "11"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the given comment",
    "queries": [],
    "exampleResponse": {}
  },
  "PATCH /comments/:comment_id": {
    "description": "Updates the given comment's vote count",
    "queries": [],
    "exampleRequest": { "inc_votes": 2 },
    "exampleResponse": {
      "comments": {
        "comment_id": 12,
        "author": "weegembump",
        "body": "Text from the comment..",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 12,
        "article_id": 1
      }
    }
  }
}
